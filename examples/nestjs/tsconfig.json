{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2018",
        "lib": ["ES6"],
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"],
}